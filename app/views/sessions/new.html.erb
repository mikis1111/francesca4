<div class="register-hero">

  <div class="register-card animate-register">

    <h2 class="register-title text-center mb-4">Login</h2>

    

    <%= form_with url: login_path, local: true do |f| %>

      <!-- EMAIL -->
      <div class="mb-3">
        <%= label_tag :email, "Email", class: "form-label fw-semibold" %>
        <%= email_field_tag :email,
              params[:email],
              class: "form-control register-input",
              placeholder: "esempio@email.com",
              required: true %>
      </div>

      <!-- PASSWORD -->
      <div class="mb-4">
        <%= label_tag :password, "Password", class: "form-label fw-semibold" %>
        <%= password_field_tag :password,
              nil,
              class: "form-control register-input",
              placeholder: "Inserisci la password",
              required: true %>
      </div>

      <div class="text-center">
        <%= submit_tag "Accedi",
              class: "btn register-btn px-4 py-2" %>
      </div>

    <% end %>

    <div class="text-center mt-4 small">
      Non hai un account?
      <%= link_to "Registrati qui", signup_path, class: "register-link" %>
    </div>

  </div>
</div>

<!-- STESSO CSS DELLA REGISTRAZIONE -->
<style>

  .register-hero {
    min-height: 100vh;
    background: linear-gradient(
      rgba(75,0,130,0.75),
      rgba(75,0,130,0.75)
    ), url('/assets/hero_salad.jpg');
    background-size: cover;
    background-position: center;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 40px 20px;
  }

  .register-card {
    background: rgba(255,255,255,0.85);
    backdrop-filter: blur(10px);
    padding: 40px 45px;
    border-radius: 22px;
    box-shadow: 0 20px 40px rgba(0,0,0,0.25);
    max-width: 520px;
    width: 100%;
  }

  .register-title {
    font-weight: 700;
    color: #4B0082;
    font-size: 2rem;
  }

  .register-input {
    border: 2px solid #e8e2f3;
    padding: 10px 14px;
    border-radius: 10px;
    transition: 0.2s;
  }

  .register-input:focus {
    border-color: #4B0082;
    box-shadow: 0 0 8px rgba(75,0,130,0.25);
  }

  .register-btn {
    background: #4B0082;
    color: white;
    border-radius: 30px;
    font-weight: 600;
    width: 100%;
    box-shadow: 0 5px 18px rgba(75,0,130,0.3);
    transition: 0.25s ease;
  }

  .register-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 25px rgba(75,0,130,0.4);
  }

  .register-link {
    color: #4B0082;
    font-weight: 600;
  }

  .register-link:hover {
    text-decoration: underline;
  }

  .animate-register {
    animation: fadeInUp 0.7s ease both;
  }

  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(30px); }
    to   { opacity: 1; transform: translateY(0); }
  }

  @media (max-width: 375px) {
    .register-card {
      padding: 30px 20px;
    }
    .register-title {
      font-size: 1.7rem;
    }
  }

</style>

<div class="auth-hero">

  <div class="auth-card animate-auth">

    <h2 class="auth-title">Login</h2>

    <%= form_with url: login_path, local: true do %>

      <div class="mb-3">
        <%= label_tag :email, "Email", class: "form-label fw-semibold" %>
        <%= email_field_tag :email,
              params[:email],
              class: "form-control auth-input",
              required: true %>
      </div>

      <div class="mb-4">
        <%= label_tag :password, "Password", class: "form-label fw-semibold" %>
        <%= password_field_tag :password,
              nil,
              class: "form-control auth-input",
              required: true %>
      </div>

      <%= submit_tag "Accedi", class: "btn auth-btn" %>

    <% end %>

    <div class="text-center mt-4 small">
      Non hai un account?
      <%= link_to "Registrati qui", signup_path, class: "auth-link" %>
    </div>

  </div>
</div>


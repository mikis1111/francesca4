<div class="login-hero">

  <div class="login-card animate-register">

    <h2 class="login-title text-center mb-4">Login</h2>

    <%= form_with url: login_path, local: true do %>

      <div class="mb-3">
        <%= label_tag :email, "Email", class: "form-label fw-semibold" %>
        <%= email_field_tag :email,
              params[:email],
              class: "form-control login-input",
              required: true %>
      </div>

      <div class="mb-4">
        <%= label_tag :password, "Password", class: "form-label fw-semibold" %>
        <%= password_field_tag :password,
              nil,
              class: "form-control login-input",
              required: true %>
      </div>

      <%= submit_tag "Accedi",
            class: "btn login-btn px-4 py-2" %>

    <% end %>

    <div class="text-center mt-4 small">
      Non hai un account?
      <%= link_to "Registrati qui", signup_path %>
    </div>

  </div>

</div>

<% if consultations.any? %>
  <div class="list-group">
    <% consultations.each do |c| %>
      <div class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <strong><%= c.scheduled_at.strftime("%d/%m/%Y alle %H:%M") %></strong>
        </div>

        <span class="badge <%= c.scheduled_at.future? ? 'bg-info' : 'bg-secondary' %>">
          <%= c.scheduled_at.future? ? "Futura" : "Passata" %>
        </span>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="text-muted">Nessuna consulenza presente.</p>
<% end %>


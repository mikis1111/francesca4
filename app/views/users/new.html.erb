<% content_for :auth_styles do %>
  <%= stylesheet_link_tag "auth", media: "all" %>
<% end %>



<div class="auth-hero">

  <div class="auth-card animate-auth">

    <h2 class="auth-title">Registrazione</h2>

    <%= form_with model: @user, url: signup_path do |f| %>

      <div class="mb-3">
        <%= f.label :name, "Nome completo", class: "form-label fw-semibold" %>
        <%= f.text_field :name,
              class: "form-control auth-input",
              required: true %>
      </div>

      <div class="mb-3">
        <%= f.label :email, "Email", class: "form-label fw-semibold" %>
        <%= f.email_field :email,
              class: "form-control auth-input",
              required: true %>
      </div>

      <div class="mb-3">
        <%= f.label :password, "Password", class: "form-label fw-semibold" %>
        <%= f.password_field :password,
              class: "form-control auth-input",
              required: true %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, "Conferma Password", class: "form-label fw-semibold" %>
        <%= f.password_field :password_confirmation,
              class: "form-control auth-input",
              required: true %>
      </div>

      <%= f.submit "Registrati", class: "btn auth-btn" %>

    <% end %>

    <div class="text-center mt-4 small">
      Hai gi√† un account?
      <%= link_to "Accedi qui", login_path, class: "auth-link" %>
    </div>

  </div>
</div>

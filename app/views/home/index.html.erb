<!-- HERO SECTION -->
<div class="hero" style="
  background-image: url('/assets/hero_salad.jpg');
  background-size: cover;
  background-position: center;
  height: 500px;
  position: relative;
">
  <div class="d-flex justify-content-center align-items-center h-100">
    <div class="bg-white p-5 rounded shadow-lg text-center" style="max-width: 600px;">
      <h1 class="fw-bold">Benvenuto</h1>
      <p>
        Scopri il tuo percorso di benessere con un piano alimentare su misura.<br>
        Migliora il tuo stile di vita con semplicità e risultati concreti.
      </p>

      <div class="d-flex justify-content-center gap-3 mt-3">
        <%= link_to "SCOPRI DI PIÙ", chi_sono_path,
      class: "btn btn-purple px-4 py-2 text-white",
      style: "background-color:#4B0082;" %>

        <%= link_to "PRENOTA UNA CONSULENZA GRATUITA",
      prenota_consulenza_path,
      class: "btn btn-success px-4 py-2" %>

      </div>
    </div>
  </div>
</div>

<!-- SPAZIO -->
<div style="height: 20px;"></div>

<!-- CARDS -->
<div class="container">
  <div class="row justify-content-center">

    <% cards = [
      { img: "card_piani.jpg", title: "Piani alimentari personalizzati", path: piani_alimentari_path },
      { img: "card_peso.jpg", title: "Gestione del peso", path: gestione_peso_path },
      { img: "card_gravidanza.jpg", title: "Alimentazione in gravidanza", path: gravidanza_path },
      { img: "card_patologie.jpg", title: "Patologie certificate", path: patologie_path },
      { img: "card_sport.jpg", title: "Sport e performance", path: sport_path }
    ] %>

    <% cards.each do |card| %>
      <div class="col-6 col-md-4 col-lg-2 d-flex card-spacing">
        <div class="card shadow card-god flex-fill text-center">
          <img src="/assets/<%= card[:img] %>"
               class="card-img-top"
               style="height:120px; object-fit:cover;">

          <div class="card-body d-flex flex-column">
            <h6 class="fw-bold"><%= card[:title] %></h6>

            <div class="mt-auto">
              <%= link_to "SCOPRI",
                    card[:path],
                    class: "btn btn-purple w-100 text-white",
                    style: "background-color:#4B0082;" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

  </div>
</div>

